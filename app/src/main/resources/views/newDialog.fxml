<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<DialogPane
    prefWidth="400"
    prefHeight="200"
    styleClass="custom-pane"
    stylesheets="@../styles/dark-theme.css"
    xmlns:fx="http://javafx.com/fxml"
>
    <content>
        <VBox fx:id="dialogContent">
            <children>
                <VBox VBox.vgrow="ALWAYS">
                    <children>
                        <Text>Enter Floor Plan Details</Text>
                        <GridPane hgap="5" vgap="10" style="-fx-padding: 10 10 10 10;">
                            <Label text="Width:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <TextField fx:id="widthTextField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                            <Label text="Height:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <TextField fx:id="heightTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                            <Label text="Number of Floors:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                            <TextField fx:id="numFloorsTextField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        </GridPane>
                    </children>
                </VBox>
            </children>
        </VBox>
    </content>
</DialogPane>
