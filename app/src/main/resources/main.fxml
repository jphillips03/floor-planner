<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainBox"
    maxHeight="-Infinity"
    maxWidth="-Infinity"
    minHeight="-Infinity"
    minWidth="-Infinity"
    styleClass="custom-pane"
    stylesheets="@dark-theme.css"
    xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="floor.planner.controllers.MainController"
>
    <children>
        <MenuBar fx:id="menuBar">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onMenuNewFile" text="New File" />
                        <MenuItem mnemonicParsing="false" onAction="#onMenuOpenFile" text="Open File" />
                        <MenuItem mnemonicParsing="false" onAction="#onMenuOpenFile" text="Save As..." />
                        <MenuItem mnemonicParsing="false" onAction="#onMenuSave" text="Save" />
                        <MenuItem mnemonicParsing="false" onAction="#onMenuOpenFile" text="Exit" />
                    </items>
                </Menu>
                <Menu fx:id="dimensionMenu" mnemonicParsing="false" text="Dimension">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onMenu2D" text="2 Dimensional Image" />
                        <MenuItem mnemonicParsing="false" onAction="#onMenu3D" text="3 Dimensional Image" />
                    </items>
                </Menu>
                <Menu fx:id="floorMenu" mnemonicParsing="false" text="Floor"></Menu>
            </menus>
        </MenuBar>
        <StackPane fx:id="openGLPane" VBox.vgrow="ALWAYS" />
        <HBox fx:id="bottomButtonBar">
            <children>
                <Button fx:id="rayTrace" mnemonicParsing="false" text="Ray Trace"></Button>
                <Button fx:id="center3D" mnemonicParsing="false" onAction="#onCenter3D" text="Re-Center"></Button>
            </children>
        </HBox>
    </children>
</VBox>
